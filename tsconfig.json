{
  "compilerOptions": {
    // 최신 문법 사용을 위해 ES2020으로 설정
    "target": "ES2020",

    // CommonJS는 Node.js에서 사용하는 모듈 시스템입니다
    "module": "CommonJS",

    // 소스코드 루트 디렉토리 (src 폴더 아래로 코드 정리)
    "rootDir": "src",

    // 컴파일된 결과물이 저장될 디렉토리 (배포용)
    "outDir": "dist",

    // 엄격한 타입 체크 활성화 (가능한 켜두는 걸 권장)
    "strict": true,

    // CommonJS에서도 ESModule을 사용할 수 있게 해주는 옵션
    "esModuleInterop": true,

    // 파일 이름 대소문자 일관성 검사 (Mac/Linux에서 문제 방지)
    "forceConsistentCasingInFileNames": true,

    // 외부 라이브러리 타입 검사 생략 (빌드 속도 향상)
    "skipLibCheck": true
  }
}